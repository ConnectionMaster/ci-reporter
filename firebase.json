{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/webhooks",
        "function": "bot"
      },
      {
        "source": "/encode",
        "function": "encode"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "ignore": [
      "src",
      "**/node_modules/**"
    ]
  }
}
